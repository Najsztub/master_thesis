% custom colors
%\definecolor{ASblue}{cmyk}{0.9,0.8,0,0}
\definecolor{ASblue}{cmyk}{0.75,0,0.75,0.45}
%\definecolor{ASlightblue}{cmyk}{0.25,0,0,0}
\definecolor{ASlightblue}{cmyk}{0.11,0,0.11,0}
\definecolor{ASblack}{rgb}{0,0,0}
%\definecolor{AScyan}

% headline colors and fonts
\setbeamercolor{headline}{fg=white,bg=ASblue}
\setbeamercolor{title in headline}{fg=white}
\setbeamercolor{author in headline}{fg=ASlightblue}
\setbeamercolor{institute in headline}{fg=ASlightblue}
\setbeamercolor{logo in headline}{fg=ASblack,bg=ASlightblue}
\setbeamercolor{separation line}{bg=ASlightblue}

% footline colors and fonts
\setbeamercolor{footline}{fg=white,bg=ASblue}
\setbeamerfont{footline}{fg=white, size=\large}

% body colors and fonts
\setbeamercolor*{normal text}{fg=white,bg=ASblack}

\setbeamercolor{bibliography entry author}{use=structure,fg=black}
\setbeamercolor{bibliography entry title}{use=normal text,fg=normal text.fg}
\setbeamercolor{bibliography entry location}{use=structure,fg=black}
%\setbeamercolor{bibliography entry note}{use=structure,fg=structure.fg!65!bg}

% block environment
\setbeamercolor*{block body}{bg=white,fg=ASblack}
\setbeamercolor*{block title}{fg=ASlightblue,bg=ASblue}
\setbeamerfont{block title}{size=\LARGE,series=\bf}

\setbeamertemplate{enumerate items}[ball]
\setbeamertemplate{itemize items}[ball]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster
\setbeamertemplate{bibliography item}[text]
\setbeamercolor{bibliography item}{fg = ASblue}
